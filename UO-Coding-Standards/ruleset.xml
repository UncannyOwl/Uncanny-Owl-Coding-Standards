<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Uncanny Owl" namespace="UO\CS"
         xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

    <description>The Coding standard for the WordPress Coding Standards itself.</description>

    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="colors"/> <!-- Show results with colors -->
    <arg name="extensions" value="php"/>
    <!--	<arg name="basepath" value="."/>-->
    <arg name="parallel" value="8"/>
    <ini name="memory_limit" value="512M"/>

    <!-- Check code for cross-version PHP compatibility. -->
    <config name="minimum_supported_wp_version" value="5.3-"/>

    <!--	<exclude-pattern>/bin/class-ruleset-test.php</exclude-pattern>-->
    <!--	&lt;!&ndash; Exclude Composer vendor directory. &ndash;&gt;-->
    <!--	<exclude-pattern>*/node_modules/*</exclude-pattern>-->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <!--	&lt;!&ndash; Exclude minified Javascript files. &ndash;&gt;-->
    <exclude-pattern>*.min.js</exclude-pattern>

    <!-- Include the WordPress-Extra standard. -->
    <rule ref="WordPress-Extra"/>
    <rule ref="WordPress-Docs"/>

    <config name="testVersion" value="5.6-"/>
    <rule ref="PHPCompatibilityWP"/>

    <!--&lt;!&ndash;	&lt;!&ndash; Add in some extra rules from other standards. &ndash;&gt;&ndash;&gt;-->
    <!--&lt;!&ndash;	<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>&ndash;&gt;-->
    <!--&lt;!&ndash;	<rule ref="Generic.Commenting.Todo"/>&ndash;&gt;-->

    <!--&lt;!&ndash;	&lt;!&ndash; Enforce PSR1 compatible namespaces. &ndash;&gt;&ndash;&gt;-->
    <!--&lt;!&ndash;	<rule ref="PSR1.Classes.ClassDeclaration"/>&ndash;&gt;-->

    <!--	<rule ref="WordPress.Arrays.MultipleStatementAlignment">-->
    <!--		<properties>-->
    <!--			<property name="alignMultilineItems" value="!=100"/>-->
    <!--			<property name="exact" value="false" phpcs-only="true"/>-->
    <!--		</properties>-->
    <!--	</rule>-->

    <!--	<rule ref="PSR2.Methods.FunctionClosingBrace"/>-->

    <!-- Minimum supported WP version -->

    <!--	&lt;!&ndash; Check for text-domain &ndash;&gt;-->
    <!--	<rule ref="WordPress.WP.I18n">-->
    <!--		<properties>-->
    <!--			<property name="text_domain" type="array">-->
    <!--				<element value="uncanny-learndash-groups"/>-->
    <!--			</property>-->
    <!--		</properties>-->
    <!--	</rule>-->

    <!-- Set posts per page to 9999 instead 100 -->
    <rule ref="WordPress.WP.PostsPerPage">
        <properties>
            <property name="posts_per_page" value="9999"/>
            <property name="posts_per_page" value="-1"/>
        </properties>
    </rule>

    <!-- Validate Sanitized Input -->
    <rule ref="WordPress.Security.ValidatedSanitizedInput">
        <properties>
            <property name="customSanitizingFunctions" type="array">
                <element value="prefix_sanitize_url"/>
                <element value="prefix_sanitize_postal_code"/>
            </property>
            <property name="customUnslashingSanitizingFunctions" type="array">
                <element value="prefix_sanitize_unslash_url"/>
            </property>
        </properties>
    </rule>

    <!-- Check for Nonce verification -->
    <rule ref="WordPress.Security.NonceVerification">
        <properties>
            <property name="customSanitizingFunctions" type="array">
                <element value="prefix_sanitize_url"/>
                <element value="prefix_sanitize_postal_code"/>
            </property>
            <property name="customUnslashingSanitizingFunctions" type="array">
                <element value="prefix_sanitize_unslash_url"/>
            </property>
        </properties>
    </rule>

    <!-- Check for deprecated functions -->
    <rule ref="WordPress.WP.DeprecatedFunctions">
        <properties>
            <property name="minimum_supported_version" value="5.0"/>
        </properties>
    </rule>

    <rule ref="Generic.Formatting.MultipleStatementAlignment">
        <properties>
            <property name="alignAtEnd" value="false"/>
            <property name="maxPadding" value="100"/>
            <property name="error" value="false"/>
        </properties>
    </rule>
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="strict_class_file_names" value="false"/>
        </properties>
    </rule>
</ruleset>
