{
  "name": "uocs/uncanny-owl-coding-standards",
  "type": "phpcodesniffer-standard",
  "description": "PHP_CodeSniffer rules (sniffs) to enforce Uncanny Owl coding conventions",
  "keywords": [
    "phpcs",
    "standards",
    "WordPress",
    "Uncanny Owl",
    "Automator"
  ],
  "config": {
    "platform-check": false,
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "license": "proprietary",
  "authors": [
    {
      "name": "Saad Siddique",
      "email": "saad@uncannyowl.com"
    },
    {
      "name": "Uncanny Owl"
    }
  ],
  "require": {
    "php": ">=7.4",
    "squizlabs/php_codesniffer": "^3.10.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "wp-coding-standards/wpcs": "^3.1.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpcompatibility/phpcompatibility-paragonie": "^1.3",
    "phpcsstandards/phpcsutils": "^1.0",
    "phpcsstandards/phpcsextra": "^1.1",
    "phpmd/phpmd": "^2.13",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "phpstan/extension-installer": "^1.2",
    "vimeo/psalm": "^4.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "friendsofphp/php-cs-fixer": "^3.0",
    "vimeo/psalm": "^5.0",
    "phpmd/phpmd": "^2.13",
    "squizlabs/php_codesniffer": "^3.10",
    "slevomat/coding-standard": "^8.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/UncannyOwl/UOCS/issues",
    "source": "https://github.com/UncannyOwl/UOCS"
  },
  "autoload": {
    "psr-4": {
      "Uncanny_Automator\\": "Uncanny-Automator/",
      "UO\\API\\": "Automator-API/"
    }
  },
  "bin": [
    "bin/automator-phpcs",
    "bin/automator-phpcbf",
    "bin/api-phpcs",
    "bin/api-phpcbf",
    "bin/owl-phpcs",
    "bin/owl-phpcbf"
  ],
  "scripts": {
    "post-install-cmd": [
      "@php -r \"if (PHP_OS_FAMILY === 'Windows') { exit(0); }\"",
      "chmod +x bin/automator-*",
      "chmod +x bin/api-*",
      "chmod +x bin/owl-*"
    ],
    "post-update-cmd": [
      "@php -r \"if (PHP_OS_FAMILY === 'Windows') { exit(0); }\"",
      "chmod +x bin/automator-*",
      "chmod +x bin/api-*",
      "chmod +x bin/owl-*"
    ],
    "analyse": "phpstan analyse",
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "psalm": "psalm",
    "phpmd": "phpmd src text phpmd.xml"
  },
  "extra": {
    "phpcodesniffer-search-depth": 5
  }
}